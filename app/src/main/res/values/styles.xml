<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ProductTitle" parent="@style/TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/colorText1</item>
        <item name="android:fontFamily">@font/thinoobold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ProductBody" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/colorText2</item>
        <item name="android:fontFamily">@font/thinoothin</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>